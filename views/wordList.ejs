<script>
    document.addEventListener('click', e => {
        if (e.target.classList.contains('fa-xmark')) {
            const wordContainer = e.target.closest('.wordList--word-container')
            const wordId = wordContainer.dataset.wordId
            console.log("Sending DELETE request for word with id:", wordId)
            const url = "/wordList"
            const options = {
                method: "DELETE",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify({ wordId })
            }
            fetch(url, options) 
                .then(res => res.json())
                .then(data => {
                    if (data.status === 200) {
                        console.log("Word deleted.")
                        wordContainer.remove()
                    }
                })
        }
        if (e.target.classList.contains('fa-pen-to-square')) {
            const wordContainer = e.target.closest('.wordList--word-container')
            const wordId = wordContainer.dataset.wordId
            console.log("Sending PATCH request for word with id:", wordId)
        }
        
    })
</script>